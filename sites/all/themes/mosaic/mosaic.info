
name        = Mosaic
description = A fluid grid based theme for Coral Nexus.
package     = Coral
version     = VERSION
core        = 7.x

; - Stylesheets
stylesheets[all][]   = css/screen.css
stylesheets[print][] = css/print.css

; - Global scripts
; -- Libraries
scripts[] = js/lib/prettify/src/prettify.js
scripts[] = js/lib/tinymce/js/tinymce/tinymce.js
scripts[] = js/lib/TableOfContents/js/jquery.tableofcontents.js
scripts[] = js/lib/color/jquery.color.min.js

; -- Custom
scripts[] = js/global/mosaicCore.js
scripts[] = js/global/mosaicMce.js
scripts[] = js/global/mosaicSlideshow.js
scripts[] = js/global/mosaicToc.js
scripts[] = js/global/mosaicPrettify.js
scripts[] = js/global/mosaicBox.js

; - Panels
plugins[panels][layouts]     = plugins/layouts
plugins[panels][styles]      = plugins/styles
api[panels][styles][version] = 2


; - Page manager
api[page_manager][pages_default][version] = 1
api[page_manager][pages_default][path]    = pages

; - Settings
;settings[mosaic_setting] = "some setting"